class Jeep extends GameObject
{
  PImage img;

  //-----------------------------------------------------------------------------------------------------

  Jeep() {
    pos.x = random(width,width*4);
    //pos.y = 600;
    img = loadImage("tank.png");
  }

  //-----------------------------------------------------------------------------------------------------

  Jeep(float y, float w, float h, float speed)
  {
    this();
    this.pos.y = y;
    this.w=w;
    this.h=h;
    this.speed = speed;
  }

  //-----------------------------------------------------------------------------------------------------

  void update()
  {
    pos.x -= speed;
  }

  //-----------------------------------------------------------------------------------------------------

  void display()
  {
    image(img, pos.x, pos.y, w, h);
  }
}

